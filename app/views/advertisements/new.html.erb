<h1>New Advertisement</h1>
 
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for advertisement</p>
    <ul>
      <li>Make sure valid information is entered.</li>
      <li>Don't use symbols.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Advertisement title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Advertisement body" %>
      </div>
      <div class= 'form-group'>
        <% f.label :price %>
        <%=f.label :price %> <%=f.number_field :price, class: 'form-control', placeholder: 10 %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>